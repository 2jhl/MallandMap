<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_back_36" />

        <TextView
            android:id="@+id/mallandmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:text="MAM"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <ImageButton
            android:id="@+id/search"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_search_36" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:src="@drawable/ic_baseline_star_36" />

        <TextView
            android:id="@+id/brandname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="나이키 NIKE" />

        <TextView
            android:id="@+id/typeage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="스포츠, 전연령층" />

    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:src="@drawable/nikeimage"/>

    <TextView
        android:id="@+id/explain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="Military Clothing과 90s sportwear를 기반으로 현재의 무드를 담아 매 시즌 Photography와 Movie를 통해 새로운 컬렉션을 발표하는 브랜드입니다."
        android:textSize="15dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/nearbystore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:layout_marginLeft="14dp"
            android:layout_marginBottom="1dp"
            android:textSize="15dp"
            android:text="근처 오프라인 매장 찾기 >"/>

        <Button
            android:id="@+id/news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:layout_marginLeft="14dp"
            android:textSize="15dp"
            android:text="나이키 뉴스 >" />

            <TextView
                android:id="@+id/newscontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginBottom="3dp"
                android:text="'이것이 무신사 스타일'...신진 브랜드 MZ세대 업고 '훨훨'" />

            <TextView
                android:id="@+id/newscontent1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginBottom="3dp"
                android:text="고밀도 원단 스웨트셔츠 라인 '클래식 시리즈' 출시" />

            <TextView
                android:id="@+id/newscontent2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginBottom="3dp"
                android:text="1년에 단 한번, 역대급 블프혜택 확인하세요" />

        <Button
            android:id="@+id/event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginBottom="1dp"
            android:text="행사 >     " />

        <TextView
            android:id="@+id/eventnotice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11dp"
            android:layout_marginLeft="17dp"
            android:text="이미지를 클릭하여 행사 정보를 확인하세요"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_marginLeft="17dp"
            android:src="@drawable/eventimg" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:src="@drawable/eventimg1" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_marginLeft="1dp"
            android:src="@drawable/eventimg2" />

    </LinearLayout>


</LinearLayout>