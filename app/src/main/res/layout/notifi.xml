<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--tools:context=".center_ic"-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="60dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_36" />

            <TextView
                android:id="@+id/mallandmap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center|left"
                android:text="알림설정"
                android:textSize="20dp"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bins"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:text="브랜드 정보 알림 설정" />

        <TextView
            android:id="@+id/nba"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:text="       알람 설정 브랜드 수신 동의" />

        <TextView
            android:id="@+id/brm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="       브랜드를 관심 등록하면 다양한 정보 알림을 받으실 수 있습니다" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nsetting"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:text="알림설정" />

            <Button
                android:id="@+id/onbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On" />

            <Button
                android:id="@+id/offbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/emailmarset"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:gravity="center"
                android:text="이메일 마케팅 설정" />

            <Button
                android:id="@+id/onbtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="on" />

            <Button
                android:id="@+id/offbtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="off" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>